<div class="main-content">
    <div class="header">
        <div class="logo-image">
            <a href="/"><img src="/img/logo.png" alt="logo"></a>
        </div>
    </div>

    <div class="form-content">
        <h2>Signup</h2>

        <%- include ("../partials/messages") %>

        <form method="POST" action="/users/signup" autocomplete="off">
            <input class="form-input" type="text" name="name" id="name" placeholder="Name">
            <input class="form-input" type="email" name="email" id="email" placeholder="Email Id">
            <input class="form-input" type="password" name="password" id="password" placeholder="Password">
            
            <button class="button" id="submit">Signup</button>
        </form>
    </div>

    <div class="account-info">
        <p>Have an account? <a href="/users/login">Login</a></p>
    </div>

    <%- include ("../partials/footer") %>

</div>

